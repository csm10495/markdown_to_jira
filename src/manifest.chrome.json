{
  "manifest_version": 3,

  "name": "Markdown to JIRA",
  "description": "Converts Markdown to JIRA wiki syntax",

  "version": "0.2.0",
  "permissions": ["contextMenus", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon_128x128.png"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "lib/J2M.js",
      "lib/content-script.js"
    ]
  }],
  "options_ui": {
    "page": "options.html"
  }
}
